{
  "name": "@Rectmoon/websocket-client",
  "version": "1.0.0",
  "description": "A layered WebSocket client library for React and Vue",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.esm.js",
      "require": "./dist/core/index.cjs.js"
    },
    "./react": {
      "types": "./dist/adapters/react-adapter.d.ts",
      "import": "./dist/adapters/react-adapter.esm.js",
      "require": "./dist/adapters/react-adapter.cjs.js"
    },
    "./vue": {
      "types": "./dist/adapters/vue-adapter.d.ts",
      "import": "./dist/adapters/vue-adapter.esm.js",
      "require": "./dist/adapters/vue-adapter.cjs.js"
    },
    "./store": {
      "types": "./dist/store/store-layer.d.ts",
      "import": "./dist/store/store-layer.esm.js",
      "require": "./dist/store/store-layer.cjs.js"
    }
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "npm run clean && rollup -c --environment NODE_ENV:production",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "websocket",
    "react",
    "vue",
    "real-time",
    "subscription",
    "hooks",
    "composables"
  ],
  "author": "Rectmoon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rectmoon/websocket-client.git"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0",
    "zustand": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "zustand": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.56.0",
    "jsdom": "^24.1.3",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "vue": "^3.4.15",
    "zustand": "^4.5.0"
  }
}
